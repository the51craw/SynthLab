                    <ComboBoxItem>
                        <x:String>CC 26</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>CC 27</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>CC 28</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>CC 29</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>CC 30</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>CC 31</x:String>
                    </ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="cbCCMapping" Grid.Row="11" HorizontalAlignment="Stretch" FontFamily="Ethnocentric" x:FieldModifier="public" SelectionChanged="cbCCMapping_SelectionChanged">
                    <ComboBoxItem>
                        <x:String>Not mapped</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Osc AM modulation depth</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Osc FM modulation depth</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Osc XM modulation depth</x:String>
                    </ComboBoxItem>
