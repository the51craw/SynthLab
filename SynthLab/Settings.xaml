                    <ComboBoxItem>
                        <x:String>Filter freq</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Filter key follow</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Filter gain</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Filter mix</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Pitch envelope depth</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Pitch envelope speed</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>ADSR attack time</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>ADSR decay time</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>ADSR sustain level</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>ADSR release time</x:String>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <x:String>Pitch bend</x:String>
                    </ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>
    </Grid>
</ContentDialog>
